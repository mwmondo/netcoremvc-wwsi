@model TodoCRUD.Models.TodoModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Usuń</h1>

<h3>Czy jesteś pewien że chcesz to usunąć?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TodoTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TodoTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TodoDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TodoDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TodoStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TodoStatus)
        </dd>
    </dl>

    <form asp-action="DeleteAction">
        <input type="hidden" asp-for="TodoId" />
        <input type="submit" value="Zapisz" class="btn btn-primary" />
        <a class="btn btn-danger" asp-action="Index">Powrót</a>
    </form>
</div>
