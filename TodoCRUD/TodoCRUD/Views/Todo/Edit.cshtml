@model TodoCRUD.Models.TodoModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edycja</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditAction">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group d-none">
                <label asp-for="TodoId" class="control-label"></label>
                <input asp-for="TodoId" class="form-control" />
                <span asp-validation-for="TodoId" class="text-danger"></span>
            </div>
            <div class="form-group d-none">
                <label asp-for="TodoIdParent" class="control-label"></label>
                <input asp-for="TodoIdParent" class="form-control" />
                <span asp-validation-for="TodoIdParent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TodoTitle" class="control-label"></label>
                <input asp-for="TodoTitle" class="form-control" />
                <span asp-validation-for="TodoTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TodoDescription" class="control-label"></label>
                <textarea asp-for="TodoDescription" class="form-control"></textarea>
                <span asp-validation-for="TodoDescription" class="text-danger"></span>
            </div>
            @*            <div class="form-group">
            <label asp-for="TodoStatus" class="control-label"></label>
            <input asp-for="TodoStatus" class="form-control" />
            <span asp-validation-for="TodoStatus" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="TodoStatus" class="control-label"></label>
                <select asp-for="TodoStatus" class="form-control">
                    <option value="0">Nierozpoczęte</option>
                    <option value="1">W trakcie</option>
                    <option value="2">Zakończone</option>
                </select>
                <span asp-validation-for="TodoStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
                <a class="btn btn-danger" asp-action="Index">Powrót</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
